<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Meesho</title>
  <style>
    body { font-family: Arial; margin: 20px; }
    .product { border: 1px solid #ccc; padding: 15px; margin: 10px;
               width: 200px; float: left; text-align: center; }
    .cart { clear: both; margin-top: 20px; }
    button { background: purple; color: white; padding: 8px; border: none; cursor: pointer; }
  </style>
</head>
<body>
  <h1>Mini Meesho - Product Store</h1>
  <div class="product">
    <img src="https://via.placeholder.com/150" alt="Product">
    <h3>T-Shirt</h3>
    <p>Price: ₹500</p>
    <button onclick="addToCart('T-Shirt', 500)">Add to Cart</button>
  </div>

  <div class="product">
    <img src="https://via.placeholder.com/150" alt="Product">
    <h3>Shoes</h3>
    <p>Price: ₹1200</p>
    <button onclick="addToCart('Shoes', 1200)">Add to Cart</button>
  </div>

  <div class="cart">
    <h2>Cart Items</h2>
    <ul id="cart-list"></ul>
  </div>

  <script>
    let cart = [];
    function addToCart(name, price) {
      cart.push({ name, price });
      displayCart();
    }
    function displayCart() {
      let cartList = document.getElementById("cart-list");
      cartList.innerHTML = "";
      cart.forEach(item => {
        let li = document.createElement("li");
        li.textContent = item.name + " - ₹" + item.price;
        cartList.appendChild(li);
      });
    }
  </script>
</body>
</html>