  <button onclick="press('6')">6</button>
  <button onclick="press('-')">-</button><br>
  <button onclick="press('7')">7</button>
  <button onclick="press('8')">8</button>
  <button onclick="press('9')">9</button>
  <button onclick="press('*')">*</button><br>
  <button onclick="press('0')">0</button>
  <button onclick="press('.')">.</button>
  <button onclick="calculate()">=</button>
  <button onclick="press('/')">/</button><br>
  <button onclick="clearAll()">C</button>
  <script>
    function press(val) { document.getElementById("result").value += val; }
    function calculate() { document.getElementById("result").value = eval(document.getElementById("result").value); }
    function clearAll() { document.getElementById("result").value = ""; }
  </script>
